<%- include("partials/header.ejs") %>
<div class="container my-5">

    <h1>Add Review for "<%= title %>"</h1>
    <h3 class="author">by <%= author %></h3>

    <div class="book-review my-4">
        <img src="<%= cover %>" alt="Book Cover" width="500px">

        <form class="mx-2 p-3" action="/add" method="post">
            <input type="hidden" name="title" value="<%= title %>">
            <input type="hidden" name="author" value="<%= author %>">
            <input type="hidden" name="isbn" value="<%= isbn %>">
            <input type="hidden" name="cover" value="<%= cover %>">

            <textarea class="review-text" name="review" placeholder="Leave a review..." required></textarea>

            <br>

            <p class="mt-3">Rating:</p>
            <% for(let i = 1; i <= 5; i++) { %>
                <input type="radio" name="rating" value="<%= i %>">
                <label for="<%= i %>"><%= i %></label>
            <% } %>

            <br>
            <input class="custom-btn my-3" type="submit" value="Add Review">
        </form>  
    </div>
    
</div>
    



